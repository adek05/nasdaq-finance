{
  "extends": "airbnb",
  "plugins": [
    "mocha"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "mocha/no-exclusive-tests": "error",
    "class-methods-use-this": 0,
    "no-console": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "no-mixed-operators": 0,
    "curly": 0,
    "quotes": [
      "error", "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "comma-dangle": ["error", {
      "arrays": "never",
      "objects": "only-multiline",
      "imports": "never",
      "exports": "never",
      "functions": "ignore"
    }]
  },
  "globals": {
    "describe": false,
    "before": false,
    "beforeEach": false,
    "it": false
  }
}